import os.path
from os import path

def Menu():
    global option
    option = str(input("1.Add New Student\n2.Check Information\n3.Modify/Delete Information"))
    Checkoption()

    match option:
        case option if int(option) == 1:
            Add()
        case option if int(option) == 2:
            CheckInfo()
        case option if int(option) == 3:
            Change()

def Checkoption():
    optionlen = len(option)
    if optionlen != 1:
        print("Invalid")
        Menu()
    else:
        ordoption = ord(option)
        optionlist = list(option)
        for i in range(0,len(option)):
            newnum = ord(optionlist[i])
            if (newnum < 49 or newnum > 51):
                print("Invalid")
                Menu()
def AskID():
    global ID, filename
    ID = str(input("Please enter student ID:"))
    CheckID()
    filename = ID + ".txt"
    Checkfile()

def CheckID():
    IDlen = len(ID)
    if IDlen != 9:
        print("Invalid")
        AskID()
    else:
        for i in range(0,len(ID)):
            newnum = ord(ID[i])
            if (newnum < 48 or newnum > 57):
                print("Invalid")
                AskID()

def Checkfile():
    global ifexists
    ifexists = bool(path.exists(filename))

def Add():
    AskID()
    if ifexists == False:
        Askname()
        ScheAndReportC()
    else:
        print("This student has already been added.")
        print("The following is the student's information:")
        CheckInfo()

def Askname():
    global fullname
    Askfname()
    Asklname()
    fullname = fname + " " + lname
    print(fullname)

def Askfname():
    global fname, ifcorrect
    fname = str(input("Enter the student's first name."))
    fname = fname.upper()
    ifcorrect = Checkname(fname)
    if ifcorrect == "false":
        Askfname()
    else:
        fname = fname.capitalize()

def Asklname():
    global lname, ifcorrect
    lname = str(input("Enter the student's last name."))
    lname = lname.upper()
    ifcorrect = Checkname(lname)
    if ifcorrect == "false":
        Asklname()
    else:
        lname = lname.capitalize()

def Checkname(name):
    namelen = len(name)
    if namelen == 0:
        print("Invalid")
        ifcorrect = "false"
        return ifcorrect
    else:
        namelist = list(name)
        for i in range (0, namelen):
            newname = ord(namelist[i])
            if newname < 65 or newname > 90:
                print("Invalid")
                ifcorrect = "false"
                return ifcorrect

def ScheAndReportC():
    option = str(input("Do you like add Schedule(Enter 1) or Report Card(Enter 2)."))
    match option:
        case option if option == "1":
            Schedule()
        case option if option == "2":
            ReportCard()
        case _:
            print("Invalid")
            ScheAndReportC()

def Schedule():
    Askdays()

def Askdays():
    global days
    days = str(input("How many days a week does this student have to take classes?"))
    Checkdays()
    Askweek()

def Checkdays():
    daylen = len(days)
    if daylen != 1:
        print("Invalid")
        Askdays()
    else:
        for i in range(0,daylen):
            newnum = ord(days[i])
            if (newnum < 49 or newnum > 55):
                print("Invalid")
                Askdays()
def Askweek():
    count = int(days)
    while count != 0:
        Askweekday()
        count = count - 1

def Askweekday():
    global weekd
    weekd = str(input("1.Monday 2.Tuesday 3.Wednesday 4.Thursday 5.Friday 6.Saturday 7.Sunday(Only enter the number)"))
    Checkweekd()
    AskWcourse()
    AskTime()

def AskTime():
    stime = str(input("Enter the start time of the class(HH:MM)"))
    ifcorrect = Checktime(stime)
    if ifcorrect == "false":
        AskTime()
    else:
        Asketime()

def Asketime():
    etime = str(input("Enter the end time of the class(HH:MM)"))
    ifcorrect = Checktime(etime)
    if ifcorrect == "false":
        Asketime()

