    print("Checktime")
    
def Checkweekd():
    weekdlen = len(weekd)
    if weekdlen != 1:
        print("Invalid")
        Askweekday()
    else:
        for i in range(0,weekdlen):
            newnum = ord(weekd[i])
            if (newnum < 49 or newnum > 55):
                print("Invalid")
                Askweekday()
def AskWcourse():
    global Wcourse
    Wcourse = []
    howmany = str(input("How many classes does this student have in this day?(Maxium 8)"))
    ifcorrect = Checkhowmany(howmany)
    if ifcorrect == "false":
        print("Invalid")
        AskWcourse()
    else:
        for i in range(0,int(howmany)):
            AskCourse()
            Wcourse.append(course)
            
        
def ReportCard():
    average = 0
    howmany = str(input("How many course do this student want to enter(Maximum 8 courses)?"))
    ifcorrect = Checkhowmany(howmany)
    if ifcorrect == "false":
        print("Invalid")
        ReportCard()
    count = int(howmany)
    while count != 0:
        AskCourse()
        Askgrade()
        average = average + grade
        count = count - 1

    average = average / int(howmany)

def AskCourse():
    global course
    course = str(input("Enter the course name."))
    course = course.upper()
    ifcorrect = Checkname(course)
    if ifcorrect == "false":
        AskCourse()

def Askgrade():
    global grade 
    grade = str(input("Enter the grade."))
    Checkgrade()

def Checkgrade():
    gradelen = len(grade)
    if gradelen == 0 or gradelen <= 4:
        print("Invalid")
        Askgrade()
    else:
        for i in range (0, gradelen):
            newnum = ord(grade[i])
            if (newnum < 48 or newnum > 57):
                print("Invalid")
                Askgrade()
            elif int(grade) > 100 or int(grade) < 0:
                print("Invalid")
                Askgrade()


def Checkhowmany(howmany):
    howmanylen = len(howmany)
    if howmanylen != 1:
        print("Invalid")
        ifcorrect = "false"
        return ifcorrect
    else:
        howmanylist = list(howmany)
        for i in range(0,len(howmany)):
            newnum = ord(howmanylist[i])
            if (newnum < 49 or newnum > 56):
                ifcorrect = "false"
                return ifcorrect

def CheckOptionT(option):
    numlen = len(option)
    if numlen != 1:
        ifcorrect = "false"
        return ifcorrect
    else:
        ordoption = ord(option)
        optionlist = list(option)
        for i in range(0,len(option)):
            newnum = ord(optionlist[i])
            if (newnum < 49 or newnum > 50):
                ifcorrect = "false"
                return ifcorrect

def CheckInfo():
    AskID()
    if ifexists == True:
        pythfile = open(filename, "r")
        print(pythfile.read())
        pythfile.close()
    else:
        print("This student has not been added.")
        Menu()


def Change():
    global choice
    AskID()
    if ifexists == True:
        pythfile = open(filename, "r")
        print(pythfile.read())
        pythfile.close()
        choice = str(input("1.Modify\n2.Delete all information about this student"))
        Checkchoice()
    else:
        print("This student has not been added.")
        Menu()

    match choice:
        case option if int(option) == 1:
            Modify()
        case option if int(option) == 2:
            Delete()

def Modify():
    print("Modify")

def Delete():
    os.remove(filename)

def Checkchoice():
    choicelen = len(choice)
    if choicelen != 1:
        print("Invalid")
        Change()
    else:
        ordoption = ord(choice)
        choicelist = list(choice)
        for i in range(0,len(choice)):
            newnum = ord(choicelist[i])
            if (newnum < 49 or newnum > 50):
                print("Invalid")
                Change()

def main():
    Menu()

if __name__ == "__main__":
    main()
