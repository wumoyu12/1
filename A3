def Askfname():
    global fname# ifcorrect
    fname = str(input("Enter the student's first name."))
    fname = fname.upper()
    #ifcorrect = fname
    iscorrect = Checkname(fname)
    #Back !
    if iscorrect == "false":
        print("Invalid")
        Askfname()
    else:
        fname = fname.capitalize()
        print(fname)

    
def Asklname():
    global lname# ifcorrect
    lname = str(input("Enter the student's last name."))
    lname = lname.upper()
    #ifcorrect = fname
    iscorrect = Checkname(lname)
    #Back !
    if iscorrect == "false":
        print("Invalid")
        Asklname()
    else:
        lname = lname.capitalize()
        print(lname)
        fullname = fname + " " + lname
        print(fullname)
        ScheAndReportC()
    
def Checkname(name):
    ifcorrect = ""
    namelen = len(name)
    if namelen == 0:
        #print("Invalid")
        #Back to Askname
        ifcorrect == "false"
        return ifcorrect
    else:
        namelist = list(name)
        for i in range (0, namelen):
            newname = ord(namelist[i])
            if newname < 65 or newname > 90:
                #print("Invalid")
                #Back to Askname
                ifcorrect == "false"
                return ifcorrect

def ScheAndReportC():
    global addoption
    addoption = str(input("Do you like add Schedule or Report Card."))
    CheckAddOption()
    
def CheckAddOption():
    numlen = len(addoption)
    if numlen != 1:
        print("invalid")
    
def CheckInfo():
    AskID()
    if ifexists == True:
        pythfile = open(filename, "r")
        print(pythfile.read())
        pythfile.close()
    else:
        print("This student has not been added.")
        Menu()
        

def Change():
    global choice
    AskID()
    if ifexists == True:
        pythfile = open(filename, "r")
        print(pythfile.read())
        pythfile.close()
        choice = str(input("1.Modify\n2.Delete all information about this student"))
        Checkchoice()
    else:
        print("This student has not been added.")
        Menu()
        
    match choice:
        case option if int(option) == 1:
            Modify()
        case option if int(option) == 2:
            Delete()

def Modify():
    print("Modify")

def Delete():
    os.remove(filename)

def Checkchoice():
    choicelen = len(choice)
    if choicelen != 1:
        print("Invalid")
        Change()
    else:
        ordoption = ord(choice)
        choicelist = list(choice)
        for i in range(0,len(choice)):
            newnum = ord(choicelist[i])
            if (newnum < 49 or newnum > 50):
                print("Invalid")
                Change()
    
def main():
    Menu()

if __name__ == "__main__":
    main()
