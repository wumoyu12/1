def CheckName(name):
    global correct
    namelen = len(name)
    if namelen == 0:
        print("Invalid")
        correct = "false"
        return correct
    else:
        namelist = list(name)
        for i in range (0, namelen):
            newname = ord(namelist[i])
            if newname < 65 or newname > 90:
